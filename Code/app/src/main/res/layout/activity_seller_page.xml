<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".SellerPage">

    <TextView
        android:id="@+id/HelloSellerTxt"
        android:layout_width="60dp"
        android:layout_height="50dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="30dp"
        android:gravity="center_horizontal"
        android:text="Hello,"
        android:textSize="20dp"></TextView>

    <TextView
        android:id="@+id/SellerNameInSellerPage"
        android:layout_width="150dp"
        android:layout_height="50dp"
        android:layout_centerHorizontal="true"
        android:layout_toRightOf="@+id/HelloSellerTxt"
        android:layout_marginTop="30dp"
        android:text="Seller"
        android:textSize="20dp"
        ></TextView>
    <RelativeLayout
        android:id="@+id/containerSeller"
        android:layout_width="350dp"
        android:layout_height="150dp"
        android:layout_marginTop="100dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/containerborder">
        <TextView
            android:id="@+id/walletBalanceTxtViewSeller"
            android:layout_width="150dp"
            android:layout_height="50dp"
            android:layout_marginLeft="10dp"
            android:gravity="center_vertical"
            android:layout_centerVertical="true"
            android:text="Wallet Balance"
            android:textSize="20dp"
            ></TextView>
        <TextView
            android:id="@+id/balanceSeller"
            android:layout_width="70dp"
            android:layout_height="50dp"
            android:layout_marginRight="10dp"
            android:layout_toRightOf="@+id/walletBalanceTxtViewSeller"
            android:gravity="center_vertical"
            android:layout_centerVertical="true"
            android:text="0"
            android:textSize="20dp"
            ></TextView>
        <TextView
            android:layout_width="70dp"
            android:layout_height="50dp"
            android:layout_toRightOf="@+id/balanceSeller"
            android:gravity="center_vertical"
            android:layout_centerVertical="true"
            android:text="TL"
            android:textSize="20dp"
            ></TextView>
    </RelativeLayout>
    <Button
        android:id="@+id/AddProductsSeller"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:width="250dp"
        android:layout_below="@+id/containerSeller"
        android:text="Add Products"
        android:fontFamily="monospace"
        android:textSize="20dp"
        android:layout_marginTop="40dp"
        ></Button>
    <Button
        android:id="@+id/ListProductsSeller"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:width="250dp"
        android:layout_below="@+id/AddProductsSeller"
        android:text="List The Products"
        android:fontFamily="monospace"
        android:textSize="18dp"
        android:layout_marginTop="40dp"
        ></Button>
    <Button
        android:id="@+id/ProductApproveSeller"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:width="250dp"
        android:layout_below="@+id/ListProductsSeller"
        android:text="Wait For Approve"
        android:fontFamily="monospace"
        android:textSize="18dp"
        android:layout_marginTop="40dp"
        ></Button>
    <Button
        android:id="@+id/GetLogsSeller"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:width="250dp"
        android:layout_below="@+id/ProductApproveSeller"
        android:text="Get Logs"
        android:fontFamily="monospace"
        android:textSize="20dp"
        android:layout_marginTop="40dp"
        ></Button>
</RelativeLayout>