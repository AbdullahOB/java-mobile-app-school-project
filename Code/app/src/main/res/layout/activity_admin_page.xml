<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".AdminPage">

    <TextView
        android:id="@+id/AdminTxtView"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Welcome, Admin"
        android:fontFamily="monospace"
        android:textSize="25dp"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="40dp"
        ></TextView>
    <Button
        android:id="@+id/userListBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_centerHorizontal="true"
        android:width="250dp"
        android:layout_below="@+id/AdminTxtView"
        android:text="Users List"
        android:fontFamily="monospace"
        android:textSize="20dp"
        android:layout_marginTop="40dp"
        ></Button>
    <Button
        android:id="@+id/marketLogsBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/userListBtn"
        android:layout_marginTop="30dp"
        android:layout_centerHorizontal="true"
        android:width="250dp"
        android:text="Market Logs"
        android:fontFamily="monospace"
        android:textSize="20dp"
        ></Button>
    <Button
        android:id="@+id/waitToApproveBtn"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/marketLogsBtn"
        android:layout_marginTop="30dp"
        android:layout_centerHorizontal="true"
        android:width="250dp"
        android:text="Waiting Approve"
        android:fontFamily="monospace"
        android:textSize="20dp"
        ></Button>
    <Button
        android:id="@+id/BuyerBalanceWaitApprove"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/waitToApproveBtn"
        android:layout_marginTop="30dp"
        android:layout_centerHorizontal="true"
        android:width="250dp"
        android:text="Buyer Waiting Approve"
        android:fontFamily="monospace"
        android:textSize="15dp"
        ></Button>
</RelativeLayout>